
<% if @user.email == current_user.email %>
  <%= link_to "Edit Your Profile", edit_user_path, class: "btn btn btn" %>
<% else %>
  <%= render 'follow_form' if signed_in? %>
<% end %>

<ul class="nav nav-tabs nav-stacked">
  <li>
    <a href="<%= user_path %>">
        <strong><%= @user.scrawls.count %></strong>
        <rhnav>SCRAWLS</rhnav> 
    </a>
  </li>
  <li>
    <a href="<%= following_user_path(@user)%>">
        <strong><%= @user.followed_users.count %></strong> 
        <rhnav>FOLLOWING</rhnav> 
    </a>
  </li>
  <li>
    <a href="<%= followers_user_path(@user)%>">
        <strong><%= @user.followers.count %></strong>
        <rhnav>FOLLOWERS</rhnav> 
    </a>
  </li>
</ul>


