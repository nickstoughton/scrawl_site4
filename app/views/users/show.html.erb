<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/background_user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.scrawls.any? %>
      <h3>Scrawls (<%= @user.scrawls.count %>)</h3>
      <ol class="scrawls">
        <%= render @scrawls %>
      </ol>
      <%= will_paginate @scrawls %>
    <% end %>
  </div>
</div>